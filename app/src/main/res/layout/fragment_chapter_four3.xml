<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp"
    tools:context=".ChapterFour3Fragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ventura_edding"
                android:text="DUKUNGAN KELUARGA"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambar_1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/desc_eti"
                    android:padding="8dp"
                    android:src="@drawable/hal17_1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/minou"
                        android:gravity="center_vertical"
                        android:text="Bila ada suami, minta suami menemani saat periksa ke dokter agar ia mengetahui kondisi ibu."
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/line1"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambar_2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/desc_eti"
                    android:padding="8dp"
                    android:src="@drawable/hal17_2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:fontFamily="@font/minou"
                        android:gravity="center_vertical"
                        android:text="Bila ibu perlu bantuan, katakan kepada suami, keluarga atau teman kebutuhan ibu, misalnya bantuan menyelesaikan pekerjaan di rumah, mengingatkan jadwal pemeriksaan."
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/line2"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/gambar_3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/desc_eti"
                    android:padding="8dp"
                    android:src="@drawable/hal17_3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/header_text_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/minou"
                        android:gravity="center_vertical"
                        android:text="Berbagi cerita, pikiran dan perasaan perlu dilakukan. Usahakan untuk saling mengerti dan saling membantu."
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>