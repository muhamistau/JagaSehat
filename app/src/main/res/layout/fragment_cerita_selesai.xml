<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp"
    tools:context=".CeritaSelesaiFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/textCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/bagian_1_selesai"
                android:textAlignment="center"
                android:textSize="32sp"
                android:fontFamily="@font/ventura_edding"/>

            <ImageView
                android:id="@+id/finishButton"
                android:padding="16dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Finish Chapter Button"
                android:src="@mipmap/ic_launcher_round"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>